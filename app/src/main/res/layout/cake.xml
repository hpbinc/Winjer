<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:focusable="true"
        android:foreground="@drawable/ripple_custom"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="3dp"
        card_view:contentPadding="0dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp">
            <ImageView
                android:id="@+id/image"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:background="#fff"

                android:gravity="center|center_vertical"
                android:scaleType="centerCrop"
                android:text="shirts"
                android:textColor="#000"

                />

            <TextView
                android:id="@+id/cakename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Black Forest"
                android:textColor="#000"
                android:textSize="10dp"
                />

            <TextView
                android:id="@+id/pricehead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cakename"
                android:text="Price"

                android:textSize="10sp"
                android:textStyle="bold"
                android:typeface="monospace"
                />
            <TextView
                android:id="@+id/discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pricehead"
                android:layout_marginTop="10dp"
                android:text="(Inclusive of all taxes)"
                android:textColor="#05b722"
                android:textSize="8sp"


                />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentRight="true"
                android:layout_below="@+id/pricehead"
                android:layout_marginBottom="5dp"
                android:gravity="bottom"

                android:text="₹ 475"
                android:textColor="#05b722"
                android:textSize="15sp"


                />
            <TextView
                android:id="@+id/oldprice"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/price"
                android:gravity="bottom"



                android:text=" Market price ₹500  "
                android:textColor="#838282"
                android:textSize="7sp"


                />
            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/oldprice"
                android:layout_marginTop="10dp"
                android:background="#d4d1d1"

                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
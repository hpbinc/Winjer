<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/cakeimage"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:clickable="true"
        android:onClick="largeimage"
        android:scaleType="fitXY"/>

    <TextView

        android:id="@+id/cakename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="Vanilla cake"
        android:textColor="#141414"
        android:textSize="20dp"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#d4d1d1"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="7dp"
        android:padding="16dp"
        android:text=""
        android:textColor="#141414"/>

    <Button
        android:id="@+id/book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#141414"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/ripple_custom"
        android:onClick="ordercake"
        android:text="Order Cake"
        android:textColor="#fff"
        />

    </LinearLayout>


</ScrollView>
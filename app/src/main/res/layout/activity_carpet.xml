<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative_layout_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/nextbutton"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relative">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="center"
                    android:src="@drawable/basic_cleaning"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CARPET CLEANING"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:layout_alignParentBottom="true"
                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/activity_vertical_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/linear"
                    android:layout_below="@id/line1">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="  Our Promise"
                        android:textColor="#141414"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:drawableLeft="@drawable/ic_verified_user_black_24dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="40dp"
                        android:text="We provide highly trained professional staffs."/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#141414"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/ic_thumb_up_black_24dp"
                        android:text="  Service guaranteed"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="40dp"
                        android:text="100% service guaranteed."/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="  Quality cleaning agents"
                        android:textColor="#141414"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/ic_filter_vintage_black_24dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="40dp"
                        android:text="Eco-friendly cleaning agents."/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="#d4d1d1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What we offer"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:typeface="monospace"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40dp"
                    android:lineSpacingExtra="7dp"
                    android:layout_marginTop="10dp"
                    android:text="\u25ba Total dusting\n\u25ba Floor wet \u0026 dry mop cleaning\n\u25ba No vaccum\n    (Note:- vaccum extra  charge ₹500)"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="#d4d1d1"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/pricehead"
                        android:text="Price"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:typeface="monospace"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pricehead"
                        android:id="@+id/discount"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="20dp"
                        android:text="Cost per sq.ft :   ₹45/-"
                        android:textColor="#ff5900"
                        />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="#d4d1d1"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sizehead"
                    android:layout_below="@+id/line2"
                    android:text="Enter area"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:typeface="sans"
                    android:textStyle="bold"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sizehead"
                    android:id="@+id/hall"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    >

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint="Enter value in sq.ft"
                        android:padding="10dp"
                        android:gravity="center"
                        android:typeface="sans"
                        android:inputType="number"
                        android:background="@drawable/button_transparent"/>


                </LinearLayout>

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NEXT"
                android:layout_marginBottom="10dp"
                android:background="#141414"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#fff"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onOrderClicked"
                android:foreground="@drawable/ripple_custom"
                />

        </LinearLayout>


    </ScrollView>


</RelativeLayout>
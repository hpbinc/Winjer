<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.app.hance.winjer.location_schedule">

    <fragment
        android:id="@+id/place_autocomplete_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />

    <View
        android:layout_below="@id/place_autocomplete_fragment"
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E0E0E0"
        android:layout_marginBottom="20dp"/>

    <Button
        android:layout_below="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="my location"
        android:onClick="locat"
        android:id="@+id/button"
        android:textColor="#fff"
        android:background="@drawable/buttonstyle"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/layout"
        android:layout_below="@+id/button"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:gravity="center_vertical"

            android:text="SCHEDULE BOOKING"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:id="@+id/text"
            />




        <NumberPicker
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/picker"
            android:theme="@style/AppTheme.Picker"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/layout"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:gravity="center_vertical"

            android:text="SHEDULE BOOKING"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:id="@+id/text2"
            />


        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/picker2"
            app:np_dividerDistance="30dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            app:np_width="64dp"
            app:np_height="180dp"
            app:np_dividerColor="@color/colorPrimary"

            app:np_max="59"
            app:np_min="0"
            app:np_selectedTextColor="@color/colorPrimary"
            app:np_selectedTextSize="20dp"
            app:np_textColor="@color/colorPrimary"
            app:np_textSize="18dp"
            app:np_value="3" />
    </LinearLayout>




</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.app.hance.winjer.location_schedule"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Schedule Booking"
            android:gravity="left"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/schedule"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="10dp"

            android:id="@+id/horiview"
            android:layout_below="@id/schedule">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JAN 15\nMON"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/button_transparent"
                    android:id="@+id/date1"
                    android:focusable="true"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JAN 16\nTUE"
                    android:layout_marginLeft="25dp"
                    android:background="@drawable/button_transparent"
                    android:id="@+id/date2"
                    android:focusable="true"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JAN 17\nWED"
                    android:layout_marginLeft="25dp"
                    android:background="@drawable/button_transparent"
                    android:id="@+id/date3"
                    android:focusable="true"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JAN 18\nTHU"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/button_transparent"
                    android:id="@+id/date4"
                    android:focusable="true"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JAN 19\nFRI"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/button_transparent"
                    android:id="@+id/date5"
                    android:focusable="true"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JAN 20\nSAT"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/button_transparent"
                    android:id="@+id/date6"
                    android:focusable="true"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JAN 21\nSUN"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/button_transparent"
                    android:id="@+id/date7"
                    android:focusable="true"
                    />

            </LinearLayout>

        </HorizontalScrollView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"

            android:layout_below="@+id/horiview"
            android:gravity="left"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/textaddress"
            />



        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainhouse"
            android:layout_below="@+id/textaddress"
            float:fletPadding="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="House"
                android:id="@+id/house"
                android:paddingLeft="10dp"/>

        </com.wrapp.floatlabelededittext.FloatLabeledEditText>





        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mainhouse"
            android:id="@+id/mainlocality"
            float:fletPaddingBottom="5dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Locality"
                android:id="@+id/locality"
                android:paddingLeft="10dp"/>
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>



        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mainlocality"
            android:id="@+id/mainpin"
            float:fletPaddingBottom="5dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pin"
                android:id="@+id/pin"
                android:paddingLeft="10dp"/>
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="16dp"
            android:layout_below="@+id/horiview"
            android:layout_toRightOf="@+id/textaddress"

            android:layout_marginLeft="120dp"
            android:text=" get my Location "
            android:onClick="locat"
            android:focusable="true"
            android:foreground="@drawable/ripple_custom"

            android:background="@drawable/buttonstyle"
            android:id="@+id/button"
            android:textSize="10dp"
            android:textColor="#fff"
            />



        <fragment
            android:id="@+id/place_autocomplete_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
            tools:layout_editor_absoluteY="0dp"
            android:layout_below="@id/mainpin"
            tools:layout_editor_absoluteX="8dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/place_autocomplete_fragment"
            android:id="@+id/view"
            android:background="#808080"/>


        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:id="@+id/mainmobile"
            float:fletPaddingBottom="5dp">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile No"
                android:id="@+id/mobile"
                android:paddingLeft="10dp"
                android:inputType="phone"/>
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mainmobile"
            android:id="@+id/mainremarks"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_transparent"
            android:layout_marginBottom="10dp"
            float:fletPaddingBottom="5dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="bottom"
                android:layout_gravity="left"
                android:layout_marginBottom="10dp"
                android:hint="Other info"

                android:id="@+id/remarks"
                android:paddingLeft="10dp"/>
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Place order"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#000"
            android:textColor="#fff"
            android:layout_below="@id/mainremarks"
            android:clickable="true"
            android:onClick="placeorder"
            android:focusable="true"
            android:foreground="@drawable/ripple_custom"
            />

    </RelativeLayout>

</ScrollView>
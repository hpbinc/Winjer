<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relative">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="center"
                android:src="@drawable/basic_cleaning"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PARTY CLEANING"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linear"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="16dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Our Promise"
                android:textColor="#141414"
                android:textSize="18sp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_verified_user_black_24dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="40dp"
                android:text="We provide highly trained professional staffs."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#141414"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_thumb_up_black_24dp"
                android:text="  Service guaranteed"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="40dp"
                android:text="100% service guaranteed."/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Quality cleaning agents"
                android:textColor="#141414"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_filter_vintage_black_24dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="40dp"
                android:text="Eco-friendly cleaning agents."/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="16dp"
            android:background="#d4d1d1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pricehead"
                android:text="Price"
                android:textSize="20sp"
                android:textColor="#000"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pricehead"
                android:id="@+id/discount"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:text="Special Price"
                android:textColor="#05b722"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"

                android:layout_below="@+id/pricehead"
                android:id="@+id/price"
                android:textSize="25sp"
                android:layout_marginBottom="5dp"

                android:gravity="bottom"
                android:text="₹ 1000"
                android:textColor="#05b722"


                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentRight="true"
                android:layout_below="@+id/price"
                android:id="@+id/oldprice"
                android:textSize="10sp"
                android:gravity="bottom"
                android:text="( ₹2000 50 % Discount )"
                android:textColor="#838282"
                />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="16dp"
            android:background="#d4d1d1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select the area"
            android:gravity="left"
            android:textSize="20sp"
            android:textColor="#000"
            android:paddingLeft="10dp"
            android:textStyle="bold"/>


        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ms_background_color="#141414"
            app:ms_text_color="#fff"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Service"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#141414"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#fff"
            android:clickable="true"
            android:focusable="true"
            android:onClick="bookservice"
            android:foreground="@drawable/ripple_custom"
            />
    </LinearLayout>

</ScrollView>
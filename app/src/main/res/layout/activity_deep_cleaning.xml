<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative_layout_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/nextbutton"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relative">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="center"
                    android:src="@drawable/basic_cleaning"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEEP CLEANING"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:layout_alignParentBottom="true"
                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linear"
                android:layout_below="@id/line1"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  Our Promise"
                    android:layout_marginTop="16dp"
                    android:textColor="#141414"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/ic_verified_user_black_24dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40dp"
                    android:text="We provide highly trained professional staffs."/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#141414"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/ic_thumb_up_black_24dp"
                    android:text="  Service guaranteed"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40dp"
                    android:text="100% service guaranteed."/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  Quality cleaning agents"
                    android:textColor="#141414"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/ic_filter_vintage_black_24dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40dp"
                    android:text="Eco-friendly cleaning agents."/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="16dp"
                android:background="#d4d1d1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What we offer"

                    android:textSize="20sp"
                    android:textColor="#000"
                    android:typeface="monospace"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40dp"
                    android:lineSpacingExtra="7dp"
                    android:layout_marginTop="10dp"
                    android:text="\u25ba Total Dusting\n\u25ba Kitchen Cupboards\n\u25ba Wardrobe Interior \u0026 Exterior Cleaning\n\u25ba Fan \u0026 Light Cleaning\n\u25ba Window Cleaning\n\u25ba Vaccum Cleaning\n\u25ba Bathroom Chemical \u0026 Scrubbing\n\u25ba Floor wet \u0026 dry"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="#d4d1d1"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/pricehead"
                        android:text="Price"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:typeface="monospace"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pricehead"
                        android:id="@+id/discount"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:text="Special Price"
                        android:textColor="#ff5900"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/pricehead"
                        android:id="@+id/price"
                        android:textSize="25sp"
                        android:layout_marginBottom="5dp"
                        android:gravity="bottom"
                        android:text="₹ 1000"
                        android:textColor="#ff5900"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/price"
                        android:id="@+id/oldprice"
                        android:textSize="10sp"
                        android:gravity="bottom"
                        android:text="( ₹2000 50 % Discount )"
                        android:textColor="#838282"
                        />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="#d4d1d1"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sizehead"
                    android:layout_below="@+id/line2"
                    android:text="Size Requirements"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:typeface="monospace"
                    android:textStyle="bold"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sizehead"
                    android:id="@+id/hall"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    >
                    <Button
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="-"
                        android:background="#000"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/halls1"
                        />
                    <TextView
                        android:layout_width="150dp"
                        android:id="@+id/halls"
                        android:layout_height="30dp"
                        android:text=""
                        android:gravity="center"
                        android:background="#fff"
                        android:textSize="15sp"
                        />

                    <Button
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="#000"
                        android:text="+"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:id="@+id/halls2"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hall"
                    android:id="@+id/bathroom"
                    android:text="Bathroom"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                    <Button
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="-"
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        android:background="#000"
                        android:textColor="#fff"
                        android:id="@+id/bathroom1"
                        />
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:id="@+id/bathrooms"
                        android:gravity="center"
                        android:text=""
                        android:background="#fff"
                        android:textSize="15sp"
                        />
                    <Button
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:textSize="15sp"
                        android:text="+"
                        android:background="#000"
                        android:textColor="#fff"
                        android:id="@+id/bathroom2"
                        />


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_below="@id/bathroom"
                    android:id="@+id/kitchen"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    >
                    <Button
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="#000"
                        android:text="-"
                        android:textSize="15sp"
                        android:id="@+id/kitchen1"
                        android:textColor="#fff"
                        android:layout_marginLeft="10dp"
                        />
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:text=""
                        android:background="#fff"
                        android:id="@+id/kitchens"
                        android:gravity="center"
                        android:textSize="15sp"
                        />

                    <Button
                        android:id="@+id/kitchen2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:textColor="#fff"
                        android:background="#000"
                        android:text="+"
                        android:textSize="15sp" />
                </LinearLayout>


            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NEXT"
                android:layout_marginBottom="10dp"
                android:background="#141414"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#fff"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onOrderClicked"
                android:foreground="@drawable/ripple_custom"
                />


        </LinearLayout>


    </ScrollView>

</RelativeLayout>
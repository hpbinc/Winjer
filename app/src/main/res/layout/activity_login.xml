<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"


        >

        <RelativeLayout
            android:id="@+id/mainpage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:elevation="10dp"

            android:gravity="center"

            android:padding="16dp"
            android:visibility="visible"
            >

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                android:gravity="center"
                android:text="Choose your sign in option"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_above="@+id/phone_sign_in"
                android:layout_marginRight="5dp"
                android:text="+91"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/phoneno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_toRightOf="@+id/left"
                android:hint="Phone number"
                android:inputType="phone"
                android:paddingLeft="3dp"
                />

            <Button
                android:id="@+id/phone_sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/phoneno"
                android:layout_marginTop="10dp"
                android:background="#000"
                android:elevation="7dp"
                android:text="Sign in with Phone"
                android:textColor="#fff"
                android:textSize="10dp"
                />

            <TextView
                android:id="@+id/or"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone_sign_in"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="or"

                />
            <com.google.android.gms.common.SignInButton
                android:id="@+id/btn_sign_in"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/or"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#000"
                android:foregroundTint="#000"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/phonepage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="16dp"
            android:visibility="invisible">
            <TextView
                android:id="@+id/heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Please Verify Your Number"
                android:textColor="#000"
                />
            <EditText

                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/heading"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="20dp"
                android:background="#fff"
                android:elevation="3dp"
                android:hint="Name"
                android:paddingLeft="5dp"

                />
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/name"
                android:layout_margin="3dp"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:elevation="3dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="5dp"


                />
            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:text="Enter OTP send via SMS"
                />
            <Button
                android:id="@+id/timer_phone"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/email"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_transparent"
                android:text="resend"
                android:textSize="10dp"

                />

            <TextView
                android:id="@+id/disp_phonenum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:paddingLeft="10dp"
                android:text="+91 9645405662"
                android:textColor="#000"/>
            <EditText
                android:id="@+id/otp_enter"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/disp_phonenum"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:elevation="3dp"
                android:hint="Enter OTP"
                android:inputType="number"
                android:paddingLeft="5dp"

                />
            <Button
                android:id="@+id/otp_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/otp_enter"
                android:layout_marginTop="25dp"
                android:background="#000"
                android:elevation="3dp"
                android:text="Sign up"
                android:textColor="#fff"

                />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/googlepage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="16dp"
            android:visibility="invisible"
            >
            <TextView
                android:id="@+id/text3"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Name"
                android:textColor="#000"


                />
            <TextView
                android:id="@+id/displayname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_toRightOf="@+id/text3"
                android:text=""
                android:textColor="#000"
                />
            <TextView
                android:id="@+id/text4"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text3"
                android:layout_marginTop="10dp"
                android:text="Email"
                android:textColor="#000"


                />
            <TextView
                android:id="@+id/displayemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text3"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/text3"
                android:text=""
                android:textColor="#000"
                />
            <TextView
                android:id="@+id/leftt"
                android:layout_width="wrap_content"
                android:layout_height="30dp"

                android:layout_above="@+id/gpagebutton"
                android:layout_marginRight="5dp"
                android:text="+91"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/google_phno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/displayemail"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/leftt"
                android:hint="Phone number"
                android:inputType="phone"
                android:paddingLeft="3dp"
                android:textSize="15dp"
                />
            <Button
                android:id="@+id/gpagebutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/google_phno"
                android:layout_marginTop="10dp"
                android:background="#000"
                android:text="Verify code"
                android:textColor="#fff"
                android:visibility="visible"

                />
            <RelativeLayout
                android:id="@+id/gpage2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/google_phno"
                android:visibility="invisible"
                >

                <TextView
                    android:id="@+id/text5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:text="Enter OTP send via SMS"
                    />
                <Button
                    android:id="@+id/timer_google"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_transparent"
                    android:text="resend"
                    android:textSize="10dp"

                    />

                <TextView
                    android:id="@+id/gpage_display_phno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text5"
                    android:paddingLeft="10dp"
                    android:text="+91 9645405662"
                    android:textColor="#000"/>
                <EditText
                    android:id="@+id/gpage_otp_enter"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/gpage_display_phno"
                    android:layout_marginTop="10dp"
                    android:background="#fff"
                    android:elevation="3dp"
                    android:gravity="center_vertical"
                    android:hint="Enter OTP"

                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:textSize="15dp"

                    />
                <Button
                    android:id="@+id/otp_button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gpage_otp_enter"
                    android:layout_marginTop="25dp"
                    android:background="#000"
                    android:elevation="3dp"
                    android:text="Sign up"
                    android:textColor="#fff"

                    />

            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>

</ScrollView>